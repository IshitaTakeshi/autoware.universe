<launch>
  <arg name="param_file" default="$(find-pkg-share lidar_feature_extraction)/config/lidar_feature_extraction.param.yaml"/>

  <arg name="rectified_scan_points_topic" default="/points_raw" description="Input rectified point cloud"/>
  <arg name="scan_edge_topic" default="/scan_edge" description="Output edge features"/>
  <arg name="scan_surface_topic" default="/scan_surface" description="Output surface features"/>
  <arg name="node_name" default="lidar_feature_extraction" />

  <node pkg="lidar_feature_extraction" exec="lidar_feature_extraction" name="$(var node_name)" output="log">
    <remap from="points_raw" to="$(var rectified_scan_points_topic)"/>
    <remap from="scan_edge" to="$(var scan_edge_topic)"/>
    <remap from="scan_surface" to="$(var scan_surface_topic)"/>
  </node>
</launch>
